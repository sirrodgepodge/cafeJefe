extends layout

block content
  h1= title
  div(class="jumbotron")
    div(class="nav row")
      ul(class="nav-pills labels")
        li(class="purchase_toggle col-xs-6 col-md-4 col-md-offset-2" id="purchase") One Time Purchase
        li(class="purchase_toggle col-xs-6 col-md-4 active" id="subscribe") Monthly Subscription, Save 10%!
    div(class="labels row center-block")
      h2(class="col-xs-3 col-md-2 col-md-offset-2") 1 bag
      h2(class="col-xs-3 col-md-2") 2 bags
      h2(class="col-xs-3 col-md-2") 3 bags
      h2(class="col-xs-3 col-md-2") 4 bags
    div(class="labels row")
      h5(class="col-xs-3 col-md-2 col-md-offset-2") 12oz ~ 1/2 cup/day
      h5(class="col-xs-3 col-md-2") 24 oz ~ 1 cup/day
      h5(class="col-xs-3 col-md-2") 36 oz ~ 1.5 cups/day
      h5(class="col-xs-3 col-md-2") 48 oz ~ 2 cups/day
    form(action="/" method="post" class="row labels")
      input(type="submit" class="buy_btn col-xs-3 col-md-2 col-md-offset-2" name="1-bag-" value="Subscribe")
      input(type="submit" class="buy_btn col-xs-3 col-md-2" name="2-bag-" value="Subscribe")
      input(type="submit" class="buy_btn col-xs-3 col-md-2" name="3-bag-" value="Subscribe")
      input(type="submit" class="buy_btn col-xs-3 col-md-2" name="4-bag-" value="Subscribe")  