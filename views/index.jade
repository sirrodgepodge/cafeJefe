extends layout

block content
  div(class="title")
    img(src="../images/cafe_jefe_text.svg")
  div(class="nav row")
    ul(class="nav-pills")
      li(class="purchase_toggle col-xs-5 col-lg-3 col-xs-offset-1 col-lg-offset-3" id="purchase") One Time Purchase
      li(class="purchase_toggle col-xs-5 col-lg-3 active-pill" id="subscribe") Monthly Subscription
  .labels(class="col-lg-10 col-lg-offset-1 container")
    div(class="label_ col-xs-6 col-sm-3 active-text")
      .h2(class="amount") 1 bag
      .h1(class="price")
      img(src="../images/1 bag.png")
      .h5 ~ 12oz ~
      a(href="https://cafejefe-test.chargebee.com/hosted_pages/plans/1-bag-subscribe" class="buy_btn")
        .button_fill.black
          .button-text Subscribe
          .button-inside
            .inside
    div(class="label_ col-xs-6 col-sm-3")
      .h2(class="amount") 2 bags
      .h1(class="price")
      img(src="../images/2 bags.png")
      .h5 ~ 24oz ~
      a(href="https://cafejefe-test.chargebee.com/hosted_pages/plans/2-bag-subscribe" class="buy_btn")
        .button_fill.black
          .button-text Subscribe
          .button-inside
            .inside
    div(class="label_ col-xs-6 col-sm-3")
      .h2(class="amount") 3 bags
      .h1(class="price")
      img(src="../images/3 bags.png")
      .h5 ~ 36oz ~
      a(href="https://cafejefe-test.chargebee.com/hosted_pages/plans/3-bag-subscribe" class="buy_btn")
        .button_fill.black
          .button-text Subscribe
          .button-inside
            .inside
    div(class="label_ col-xs-6 col-sm-3")
      .h2(class="amount") 4 bags
      .h1(class="price")
      img(src="../images/4 bags.png")
      .h5 ~ 48oz ~
      a(href="https://cafejefe-test.chargebee.com/hosted_pages/plans/4-bag-subscribe" class="buy_btn")
        .button_fill.black
          .button-text Subscribe
          .button-inside
            .inside
  .white
    div(id="map" class="row col-xs-12")
  footer(class="black")
    .col-lg-12(class="text-center")
      .back-to-top
        i(class="fa fa-angle-double-up")
    .text-center(class="container")
      .row
        .col-md-12(class="footer-logo")
          a(href="#")
            img(src="../images/cafe_jefe_text.svg" class="col-xs-2 col-xs-offset-5")
        .footer-info(class="row")
          .footer-copyright(class="white") Copyright &#169; 2014 CafeJefe LLC All Rights Reserved