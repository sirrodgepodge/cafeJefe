extends layout

block content
  div(class="title row")
    img(src="../images/cafe_jefe_text.svg")
  div(class="nav row")
    ul(class="nav-pills")
      li(class="purchase_toggle col-xs-6 col-md-4 col-md-offset-2" id="purchase") One Time Purchase
      li(class="purchase_toggle col-xs-6 col-md-4 active-pill" id="subscribe") Monthly Subscription
  div(class="labels col-xs-3 col-md-2 col-md-offset-2 active-text")
    h2 1 bag
    h1(class="price")
    h5 12oz ~ 1/2 cup/day
    a(href="https://cafejefe-test.chargebee.com/hosted_pages/plans/1-bag-subscribe" class="buy_btn")
      .button_fill.black
        .button-text Subscribe
        .button-inside
          .inside
  div(class="labels col-xs-3 col-md-2")
    h2 2 bags
    h1(class="price")
    h5 24 oz ~ 1 cup/day
    a(href="https://cafejefe-test.chargebee.com/hosted_pages/plans/2-bag-subscribe" class="buy_btn")
      .button_fill.black
        .button-text Subscribe
        .button-inside
          .inside
  div(class="labels col-xs-3 col-md-2")
    h2 3 bags
    h1(class="price")
    h5 36 oz ~ 1.5 cups/day
    a(href="https://cafejefe-test.chargebee.com/hosted_pages/plans/3-bag-subscribe" class="buy_btn")
      .button_fill.black
        .button-text Subscribe
        .button-inside
          .inside
  div(class="labels col-xs-3 col-md-2")
    h2 4 bags
    h1(class="price")
    h5 48 oz ~ 2 cups/day
    a(href="https://cafejefe-test.chargebee.com/hosted_pages/plans/4-bag-subscribe" class="buy_btn")
      .button_fill.black
        .button-text Subscribe
        .button-inside
          .inside
  //- experimenting
  