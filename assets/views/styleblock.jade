style.
  .show {
    opacity: 1!important;
    visibility: visible!important;
  }
  .landing {
    display: none;
  }
  @media(min-width: 768px) { 
    .landing {
      position: relative;
      z-index: -4;
      display: block;
      background-color: #000;
      width: 100vw;
      height: 100vh;
      overflow: hidden;
      border-bottom: solid 2px #222;
      box-sizing: content-box;
    }
  }
